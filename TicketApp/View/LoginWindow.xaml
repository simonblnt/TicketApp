<Window x:Class="TicketApp.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketApp.View"
        mc:Ignorable="d"
        Title="Login" Height="283" Width="350">
    <Grid>
        <Grid VerticalAlignment="Bottom" Margin="30,0" Height="240">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Label Content="LOGIN" VerticalAlignment="Top" Margin="110,31,110,0" Foreground="Gray" FontSize="18"/>
            <StackPanel VerticalAlignment="Center" Margin="10,70,10,82" Grid.RowSpan="2">
                <TextBox Margin="0,10" FontFamily="Champagne &amp; Limousines" FontSize="18"/>
                <PasswordBox Margin="0,10" FontFamily="Champagne &amp; Limousines" FontSize="18"/>
            </StackPanel>
            <Button VerticalAlignment="Bottom" Margin="66,0,66,57" Content="LOGIN" Grid.Row="1"/>
        </Grid>

    </Grid>
</Window>
